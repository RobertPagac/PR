{
    "name": "Bakalarka",
    "version": "2.0.1",
    "description": "Rozšírenie Google Chrome pre správcu hesiel s automatickým vypľnovaním.",
    "manifest_version": 3,
    "author": "Robert Pagac",
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "options_page": "settings.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Bakalarka",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
